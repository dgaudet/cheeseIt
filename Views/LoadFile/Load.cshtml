﻿@model cheeseIt.Models.LoadFileViewModel

@{
    ViewData["Title"] = "Load Cheese File";
}

<h2>Load Cheeses</h2>

@if (ViewBag.result != null) {
    <p class="@ViewBag.resultCssClass">@ViewBag.result @if(ViewBag.showLink){<a asp-area="" asp-controller="Cheese" asp-action="Index">View Cheese List</a>}</p>   
}
        
<form asp-action="Load" enctype="multipart/form-data">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="col-md-2 control-label">Please enter the File Location</label>
            <div class="col-md-10">
				<input type="file" name="File"/>
            </div>
        </div>
		<div class="form-group">
            <label asp-for="RecievedDate" class="col-md-2 control-label">Received Date</label>
            <div class="col-md-10">
                <input asp-for="RecievedDate" class="form-control" />
                <span asp-validation-for="RecievedDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Load" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
	<a asp-area="" asp-controller="Cheese" asp-action="Index">Back To Cheese List</a>
</div>
